LIBRARY ieee;
USE ieee.std_logic_1164.all;
USE ieee.std_logic_unsigned.all;
USE ieee.numeric_std.all;
USE work.integer_vector.all;

ENTITY player_collision_controllers IS
    PORT(
		enemy_shots_x : IN INTEGER_VECTOR((NUM_MAX_ENEMY)-1 downto 0);
		enemy_shots_y : IN INTEGER_VECTOR((NUM_MAX_ENEMY)-1 downto 0);
		ship_x : IN INTEGER;
        ship_y : IN INTEGER;
		
		ship_hit : OUT STD_LOGIC;
;
		
    );
END;

ARCHITECTURE player_collision_controllers of player_collision_controllers IS

	signal ship_hit_signal : STD_LOGIC;
begin
	
	ship_hit <= ship_hit_signal

PROCESS(clk)

BEGIN

	if((enemy_shots_x = ship_x) and (enemy_shots_y = ship_y))
		ship_hit_signal <= '1';
	end if;
	
end process;

end;